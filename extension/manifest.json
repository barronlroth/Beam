{
  "manifest_version": 3,
  "name": "Beam Lite",
  "description": "Beam URLs from iOS Shortcuts to your Chrome devices instantly.",
  "version": "0.1.0",
  "permissions": ["storage", "tabs", "notifications", "alarms"],
  "host_permissions": ["https://*/", "http://*/"],
  "background": {
    "service_worker": "sw.js",
    "type": "module"
  },
  "options_page": "options/index.html",
  "icons": {
    "128": "icon128.png"
  }
}
